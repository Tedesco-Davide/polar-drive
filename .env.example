# =============================================================================
# POLARDRIVE - ENVIRONMENT VARIABLES TEMPLATE
# Copia questo file in .env.dev o .env.prod e compila i valori
# =============================================================================

# ===== FRONTEND =====
NEXT_PUBLIC_API_BASE=http://localhost:80XX

# ===== CONNECTION STRING =====
# Usa host.docker.internal per accedere a SQL Server dall'interno del container
CONNECTION_STRING=Server=host.docker.internal;Database=DataPolar_PolarDrive_DB_XXX;TrustServerCertificate=true;

# ===== API BASE URLS =====
PUBLIC_BASE_URL=http://localhost:80XX

# ===== TESLA FLEET API =====
TESLA_API_BASE_URL=<TESLA_API_URL>
TESLA_API_PUBLIC_BASE_URL=<TESLA_API_PUBLIC_URL>
TESLA_CLIENT_ID=<YOUR_TESLA_CLIENT_ID>
TESLA_CLIENT_SECRET=<YOUR_TESLA_CLIENT_SECRET>

# ===== GOOGLE ADS =====
GOOGLE_ADS_CUSTOMER_ID=YOUR_CUSTOMER_ID
GOOGLE_ADS_CONVERSION_ACTION=YOUR_CONVERSION_ACTION
GOOGLE_ADS_ENABLED=true

# ===== JWT AUTHENTICATION =====
JWT_SECRET_KEY=<GENERATE_STRONG_SECRET_KEY>
JWT_ISSUER=https://datapolar.it
JWT_AUDIENCE=https://datapolar.it
JWT_EXPIRATION_MINUTES=60

# ===== VONAGE SMS =====
VONAGE_API_KEY=<YOUR_VONAGE_API_KEY>
VONAGE_API_SECRET=<YOUR_VONAGE_API_SECRET>
VONAGE_FROM_NUMBER=DataPolar
VONAGE_INBOUND_WEBHOOK_URL=<YOUR_INBOUND_WEBHOOK>
VONAGE_DLR_WEBHOOK_URL=<YOUR_DLR_WEBHOOK>
VONAGE_WEBHOOK_SIGNATURE_SECRET=<YOUR_SIGNATURE_SECRET>
VONAGE_WEBHOOK_SIGNATURE_METHOD=sha256
VONAGE_USE_MESSAGES_API=false

# ===== OLLAMA AI =====
OLLAMA_ENDPOINT=http://ollama:11434
OLLAMA_MODEL=qwen2.5:14b
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_CONTEXT_WINDOW=32768
OLLAMA_MAX_TOKENS=2048
OLLAMA_REPEAT_PENALTY=1.1
OLLAMA_TOP_K=40
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY_SECONDS=2