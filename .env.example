# .env.example

# ===== CONNECTION STRING =====
# Usa host.docker.internal per accedere a SQL Server dall'interno del container
CONNECTION_STRING=Server=host.docker.internal;Database=DataPolar_PolarDrive_DB_XXX;Integrated Security=true;TrustServerCertificate=true;

# ===== TESLA API =====
TESLA_API_BASE_URL=https://fleet-api.prd.na.vn.cloud.tesla.com
TESLA_CLIENT_ID=your_client_id
TESLA_CLIENT_SECRET=your_client_secret

# ===== JWT =====
JWT_SECRET_KEY=CHANGE_ME_MIN_32_CHARS
JWT_ISSUER=PolarDrive
JWT_AUDIENCE=PolarDrive-App
JWT_EXPIRATION_MINUTES=60

# ===== TWILIO =====
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_token
TWILIO_PHONE_NUMBER=+393333333333

# ===== FRONTEND =====
NEXT_PUBLIC_API_BASE=http://localhost:80XX